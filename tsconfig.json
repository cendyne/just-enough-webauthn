{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "ES2022",
    "sourceMap": true,
    "lib": ["ES2020", "dom"],
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
}
